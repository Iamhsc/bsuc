@{
    var adminmenu = ViewBag.adminmenu as IEnumerable<bsuc.Areas.Admin.Models.b_menu>;
    //var secondmenu = ViewBag.secondmenu as IEnumerable<bsuc.Areas.Admin.Models.b_menu>;
    var secondmenu = ViewBag.secondmenu;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/static/layui/css/layui.css")
    @Styles.Render("~/static/admin/css/theme.css")
    @Styles.Render("~/static/admin/css/style.css")
    @Scripts.Render("~/static/layui/layui.js")
    @Scripts.Render("~/static/admin/js/global.js")
</head>
<body>
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header" style="z-index: 999!important;">
            <div class="fl header-logo">管理控制台</div>
            <div class="fl header-fold"><a href="javascript:;" title="打开/关闭左侧导航" class="aicon ai-caidan" id="foldSwitch"></a></div>
            <ul class="layui-nav fl nobg main-nav">
                @foreach (var item in adminmenu)
                {
                    <li class="layui-nav-item layui-this"><a href="javascript:;">@Html.DisplayFor(modelItem => item.title)</a></li>
                }
            </ul>
            <ul class="layui-nav fr nobg head-info">
                <li class="layui-nav-item"><a href="/" target="_blank" class="aicon ai-ai-home" title="前台"></a></li>
                <li class="layui-nav-item"><a href="#" class="j-ajax aicon ai-qingchu" refresh="yes" title="清缓存"></a></li>
                <li class="layui-nav-item"><a href="javascript:void(0);" class="aicon ai-suo" id="lockScreen" title="锁屏"></a></li>
                <li class="layui-nav-item">
                    <a href="javascript:void(0);">超级管理员&nbsp;&nbsp;</a>
                    <dl class="layui-nav-child">
                        <dd><a data-id="00" class="admin-nav-item top-nav-item" href="#">个人设置</a></dd>
                        <dd><a href="#">退出登陆</a></dd>
                    </dl>
                </li>
            </ul>
        </div>
        <div class="layui-side layui-bg-black" id="switchNav">
            <div class="layui-side-scroll">
                @for (int i = 0; i < secondmenu.Count; i++)
                {
                    <ul class="layui-nav layui-nav-tree" style="display: none;">
                        <li class="layui-nav-item ">
                            <a href="javascript:;"><i class="aicon ai-huiyuanliebiao"></i>会员管理<span class="layui-nav-more"></span></a>
                            <dl class="layui-nav-child">
                                @foreach (bsuc.Areas.Admin.Models.b_menu item in secondmenu[i])
                                {                            
                                    <dd>
                                        <a class="admin-nav-item" data-id="20" href="@Html.DisplayFor(items => item.url)"><i class="aicon ai-huiyuandengji"></i>@Html.DisplayFor(modelItem => item.title)</a>
                                    </dd>
                                }
                            </dl>
                        </li>
                    </ul>
                }
            </div>
        </div>
        <div class="layui-body" id="switchBody">
            <ul class="bread-crumbs">
                <li><a href="javascript:void(0);">系统功能</a></li>
                <li>></li>
                <li><a href="javascript:void(0);">系统设置</a></li>
                <li><a href="#" title="添加到首页快捷菜单" class="j-ajax">[+]</a></li>
            </ul>
            <div style="padding: 0 10px;" class="mcolor"></div>
            <div class="page-body">

                <div class="layui-tab layui-tab-card">
                    <ul class="layui-tab-title">
                        <li class="layui-this">
                            <a href="#">基础</a>
                        </li>
                        <div class="tool-btns">
                            <a href="javascript:location.reload();" title="刷新当前页面" class="aicon ai-shuaxin2 font18"></a>
                            <a href="javascript:;" class="aicon ai-quanping1 font18" id="fullscreen-btn" title="打开/关闭全屏"></a>
                        </div>
                    </ul>
                    <div class="layui-tab-content page-tab-content">
                        <section>
                            @RenderBody()
                        </section>
                        @RenderSection("scripts", required: false)
                    </div>
                </div>
            </div>
        </div>
        <div class="layui-footer footer">
            <span class="fl">Powered by <a target="_blank">HisiPHP</a> v1.0.9</span>
            <span class="fr">© 2017-2018 <a target="_blank">HisiPHP.com</a> All Rights Reserved.</span>
        </div>
    </div>
</body>
</html>
