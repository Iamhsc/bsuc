@using PagedList.Mvc;
@using bsuc.common.Model;
@model PagedList.IPagedList<Bsuc_Protal_Post>
@{
    var catnameA = ViewBag.catnameA as IEnumerable<Bsuc_Protal_Category>;
}
@Scripts.Render("~/static/index/js/dynclicks.js")
<div class="bannerT">
